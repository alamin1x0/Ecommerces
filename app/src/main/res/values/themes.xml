<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcommerceApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="fontFamily">@font/mukta_mahee_regular</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/royal_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#267C67</item>
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ProgressBar">
        <item name="colorSecondary">@color/royal_blue_dark</item>
    </style>

    <style name="ProgressBarRed">
        <item name="colorSecondary">@color/bKash</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetStyleDilogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@string/bottom_sheet_behavior</item>
    </style>

    <style name="ProgressBarBlack">
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="MaterialAlertDialog_Rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorner</item>
    </style>

    <style name="DialogCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppBottomSheetStyles" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="FullScreenDialogStyle" parent="Theme.EcommerceApp">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#F50057</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:indeterminateTint">#F50057</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="behavior_peekHeight">300dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyleNew" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>
    <style name="BottomSheetStyleInvoice" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/delete_theme</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GreenDateTextAppearance">
        <item name="android:textColor">@color/green</item>
    </style>


    <style name="RoundedFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/RoundedFABShape</item>
        <item name="backgroundTint">@color/royal_blue_dark</item>
    </style>

    <style name="RoundedFABShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>


</resources>